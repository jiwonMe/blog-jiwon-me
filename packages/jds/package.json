{
  "name": "@jiwonme/jds",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components/*": "./dist/components/*.js",
    "./lib/*": "./dist/lib/*.js",
    "./globals.css": "./dist/globals.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build": "tsup && tailwindcss -i ./src/styles/globals.css -o ./dist/globals.css",
    "dev": "tsup --watch --onSuccess 'tailwindcss -i ./src/styles/globals.css -o ./dist/globals.css'",
    "update-exports": "node scripts/update-exports.js"
  },
  "devDependencies": {
    "@jiwonme/eslint-config": "workspace:*",
    "@jiwonme/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.27.0",
    "glob": "^11.0.2",
    "tsup": "^8.3.5",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/cli": "^4.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.3"
  }
}
